@page
@model Bus.Pages.LineSelectModel
@{
}
<head>
	<link rel="stylesheet" href="~/css/selectStation.css" />
	<style>
		.network-title h3 {
			width:100%;
		}
		.network-title{
			text-align:center;

		}
		.net-item{
			text-align:center;
			width:100%;
		}
		.net-item h4{
				width: 100%;
			}
	</style>
</head>
<div class="body-edit">
<h1>Select Line</h1>
<div class="network-title">
	<h3>Line number(s)</h3>
</div>
<form class="all-network">
@for (int i =0; i < Model.bService.net.nbLines; i++){
	<a class="net-item" asp-page="/Edit/changeLine" asp-all-route-data="Model.Choices[i]">
	<h4>
		@Model.bService.net.lines[i].lineNb
	</h4>
	</a>
}
</form>
</div>